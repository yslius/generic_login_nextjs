generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // 環境変数からデータベース URL を取得
}

model User {
  id           String   @id @default(uuid()) @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  email        String   @unique
  password     String
  name         String
  lineId       String?  @unique @map("line_id")
  isSubscribed Boolean  @default(false) @map("is_subscribed")

  @@map("users")
}

model School {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  name      String
  address   String?
  websiteUrl String? @map("website_url")

  @@map("schools")
}

model Event {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  schoolId    String   @db.Uuid
  title       String
  description String?
  startDatetime DateTime
  endDatetime DateTime?
  eventType   String

  @@map("events")
}

model Alert {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  userId      String   @db.Uuid
  schoolId    String   @db.Uuid
  eventType   String
  alertDatetime   DateTime @map("alert_datetime")

  @@map("alerts")
}

model FavoriteSchool {
  id          String   @id @default(uuid()) @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")
  userId      String   @db.Uuid
  schoolId    String   @db.Uuid

  @@map("favorite_school")
}

model Payment {
  id           String   @id @default(uuid()) @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  userId       String   @db.Uuid
  paymentDate  DateTime @default(now()) @map("payment_date")
  amount       Float
  paymentMethod String?

  @@map("payments")
}

model Notification {
  id           String   @id @default(uuid()) @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  userId       String   @db.Uuid
  message      String
  isRead       Boolean  @default(false) @map("is_read")
  notificationType String?

  @@map("notifications")
}

model SchoolInfo {
  id           String   @id @default(uuid()) @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  schoolId     String   @db.Uuid
  infoType     String
  content      String
  sourceUrl    String?
  lastUpdated  DateTime? @map("last_updated")

  @@map("school_info")
}

model Admin {
  id           String   @id @default(uuid()) @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  email        String   @unique
  password     String

  @@map("admins")
}

model SearchHistory {
  id           String   @id @default(uuid()) @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  userId       String   @db.Uuid
  keyword     String

  @@map("search_history")
}